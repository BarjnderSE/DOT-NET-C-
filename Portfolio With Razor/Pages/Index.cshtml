<!-- Scripts for animation -->
<script>
    // Simple animation for the "animated-text" element
    let phrases = ["ASP.NET Developer", "Software Engineer", "Python Enthusiast", "Full-Stack Developer"];
    let currentPhraseIndex = 0;
    let textElement = document.getElementById('animated-text');

    function changePhrase() {
        textElement.textContent = phrases[currentPhraseIndex];
        currentPhraseIndex = (currentPhraseIndex + 1) % phrases.length;
    }

    setInterval(changePhrase, 2000); // Change text every 2 seconds
    changePhrase(); // Initial call to display text right away
</script>
