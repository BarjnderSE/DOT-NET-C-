@model BlogMe.Models.BlogPost

@{
    ViewData["Title"] = "Edit Blog Post";
}

<h2>Edit Blog Post</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea class="form-control" id="Content" name="Content" required>@Model.Content</textarea>
    </div>

    <div class="form-group">
        <label for="ImageUrl">Image</label>
        <input type="file" class="form-control" id="ImageUrl" name="ImageUrl" />
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Cancel</a>


   
</form>


