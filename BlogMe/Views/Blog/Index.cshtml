@model IEnumerable<BlogMe.Models.BlogPost>

<h2 class="text-center my-4">All Blog Posts</h2>

<div class="container">
    <a href="@Url.Action("Create", "Blog")" class="btn btn-success mb-4">Create New Post</a>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => post.Title)</h5>
                        <p class="card-text text-muted">@post.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        <p class="card-text text-truncate" style="max-height: 60px; overflow: hidden;">@Html.DisplayFor(modelItem => post.Description)</p>
                        <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="btn btn-primary">Read More</a>
                        <a href="@Url.Action("Edit", "Blog", new { id = post.Id })" class="btn btn-warning mt-2">Edit</a>
                        <a href="@Url.Action("Delete", "Blog", new { id = post.Id })" class="btn btn-danger mt-2">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


