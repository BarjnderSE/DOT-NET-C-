@model BlogMe.Models.BlogPost

<div class="container">
    <h2 class="my-4">@Model.Title</h2>
    <p class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="img-fluid mb-4" alt="@Model.Title" />
    }
    <p>@Model.Content</p>

    <!-- Back to Blog Link -->
    <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Back to Blog</a>

    <!-- Edit Link -->
    <a href="@Url.Action("Edit", "Blog", new { id = Model.Id })" class="btn btn-warning">Edit</a>

    <!-- Delete Link -->
    <a href="@Url.Action("Delete", "Blog", new { id = Model.Id })" class="btn btn-danger">Delete</a>
</div>
